<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bacg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_frg_core_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frg_core_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四章"
            android:textSize="12sp" />

        <ui.AutoSplitTextView
            android:id="@+id/frg_core_tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="B"
            android:textSize="20sp" />


        <!--<TextView-->
        <!--android:id="@+id/frg_core_tv_content"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:text="测试"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_weight="1">-->

        <!--</TextView>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>
            <TextView
                android:id="@+id/frg_core_tv_currentpage"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="45" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>

            <TextView
                android:layout_marginLeft="2dp"
                android:id="@+id/frg_core_tv_totalpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="20778" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>








